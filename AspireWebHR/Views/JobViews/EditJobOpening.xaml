<Window x:Class="AspireWebHR.Views.MiscViews.EditJobOpening"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspireWebHR.Views.MiscViews"
        mc:Ignorable="d"
        Title="Edit Job Opening" Height="800" Width="1300" ResizeMode="NoResize">
    <Grid
        Background="GhostWhite">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>

            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="11"
            Background="#ccbbb1">

            <Viewbox
                Grid.Row="0"
                Grid.Column="0"
                Stretch="Uniform">

                <StackPanel
                    Orientation="Horizontal">
                    <Image
                        Source="../../assets/add-recruiter.png"
                        Height="60"
                        Width="60"
                        Margin="0, 0, 50, 0"/>

                    <Label
                        Content="Add Job Posting"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        FontFamily="Times New Roman Bold"
                        Foreground="White"/>
                </StackPanel>
            </Viewbox>
        </Grid>

        <!-- Viewbox for Status Control Buttons -->
        <Viewbox 
            Grid.Row="2"
            Grid.Column="1"
            Grid.ColumnSpan="8"
            Grid.RowSpan="1"
            Margin="0, 1, 0, 0">
            <StackPanel
                Orientation="Horizontal">
                
                <Button 
                    x:Name="Btn_Cancel"
                    Content="Cancel" 
                    Height="5" 
                    Width="10" 
                    FontSize="1" 
                    BorderThickness="0.1" 
                    BorderBrush="Black" 
                    Margin="0, 1, 5, 0"
                    FontFamily="Times New Roman Bold"
                    Background="Red"
                    Foreground="White"
                    Click="Btn_Cancel_Click"/>
                
                <Button 
                    x:Name="btn_Complete"
                    Content="Complete" 
                    Height="5" 
                    Width="10" 
                    FontSize="1" 
                    BorderThickness="0.1" 
                    BorderBrush="Black" 
                    Margin="0, 1, 5, 0"
                    FontFamily="Times New Roman Bold"
                    Background="Orange"
                    Foreground="White"
                    Click="btn_Complete_Click"/>
                
                <Button
                    x:Name="Btn_Active"
                    Content="Active"
                    Height="5"
                    Width="10"
                    FontSize="1"
                    BorderThickness="0.1"
                    BorderBrush="Black"
                    Margin="0, 1, 5, 0"
                    FontFamily="Times New Roman Bold"
                    Background="DarkGreen"
                    Foreground="White"
                    Click="Btn_Active_Click"/>

                <Button
                    x:Name="Btn_Hold"
                    Content="Hold"
                    Height="5"
                    Width="10"
                    FontSize="1"
                    BorderThickness="0.1"
                    BorderBrush="Black"
                    Margin="0, 1, 0, 0"
                    FontFamily="Times New Roman Bold"
                    Background="DarkGoldenrod"
                    Foreground="White"
                    Click="Btn_Hold_Click"/>
            </StackPanel>
            
        </Viewbox>
        

        <!--ViewBox No.1 && Row No. 1-->
        <Viewbox
            Grid.Row="3"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Posting Date: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <Viewbox
                            Height="10"
                            Width="55">
                            <DatePicker 
                                x:Name="datePicker_postDate"
                                BorderThickness="0.3"
                                BorderBrush="Black"
                                Margin="0, 0, 5, 0"
                                FontSize="10"
                                FontFamily="Times New Roman"/>
                        </Viewbox>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Company Name: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_CompanyName"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            FontFamily="Times New Roman"
                            FontSize="5"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Client Name: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_ClientName"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                            
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Job Location: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_JobLocation"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                            
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Viewbox>

        <!--ViewBox No.2 && Row No. 2-->

        <Viewbox
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Interview Location: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_InterviewLocation"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                            
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Client Contact:"
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_ClientContact"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Vacancy: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_Vacancy"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Role: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_Role"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                            
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 10, 0"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Viewbox>

        <!--ViewBox No.3 && Row No. 3-->

        <Viewbox
            Grid.Row="5"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Salary Range: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_SalaryRange"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                                            
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Experience: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_Experience"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Working Hours: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_WorkingHours"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Working Days: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_WorkingDays"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                </StackPanel>
            </Border>
        </Viewbox>

        <!--ViewBox No.3 && Row No. 3-->

        <Viewbox
            Grid.Row="6"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Weekly Off: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_WeeklyOff"
                            Height="10"
                            Width="55"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Gender: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_Gender"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                            
                            Margin="0, 0, 5, 0">

                            <ComboBoxItem Name="Male" Content="Male"></ComboBoxItem>
                            <ComboBoxItem Name="Female" Content="Female"></ComboBoxItem>
                            <ComboBoxItem Name="Other" Content="Other"></ComboBoxItem>
                            <ComboBoxItem Name="Any" Content="Any"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Nationality: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <TextBox
                            x:Name="txtBox_Nationality"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 5, 0"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Languages: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_ArabicSpeaker"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 10, 0">
                            <ComboBoxItem Name="Arabic" Content="Arabic"/>
                            <ComboBoxItem Name="English" Content="English"/>
                            <ComboBoxItem Name="Both" Content="Both"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Viewbox>

        <Viewbox
            Grid.Row="7"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Accomodation: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_Accomodation"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 10, 0">
                            <ComboBoxItem Name="accTrue" Content="True"/>
                            <ComboBoxItem Name="accFalse" Content="False"/>
                        </ComboBox>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Transport: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_Transport"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 10, 0">
                            <ComboBoxItem Name="traTrue" Content="True"></ComboBoxItem>
                            <ComboBoxItem Name="traFalse" Content="False"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="Meals: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_Meals"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 10, 0">
                            <ComboBoxItem Name="meaTrue" Content="True"></ComboBoxItem>
                            <ComboBoxItem Name="meaFalse" Content="False"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                    <StackPanel
                        Orientation="Horizontal">
                        <Label
                            Content="IN / OUT: "
                            FontFamily="Times New Roman Bold"
                            FontSize="5"/>

                        <ComboBox
                            x:Name="cbBox_InOut"
                            Height="10"
                            Width="55"
                            BorderThickness="0.3"
                            BorderBrush="Black"
                            FontFamily="Times New Roman"
                            FontSize="5"                
                            Margin="0, 0, 10, 0">
                            <ComboBoxItem Name="IN" Content="IN"></ComboBoxItem>
                            <ComboBoxItem Name="OUT" Content="OUT"></ComboBoxItem>
                        </ComboBox>
                    </StackPanel>


                </StackPanel>
            </Border>
        </Viewbox>


        <Viewbox
            Grid.Row="8"
            Grid.RowSpan="3"
            Grid.Column="1"
            Grid.ColumnSpan="9"
            Margin="0, 2.5, 0, 0">

            <Border 
                BorderBrush="Black"
                BorderThickness="0.3">
                <StackPanel
                    Orientation="Vertical"
                    HorizontalAlignment="Center">


                    <Label
                        Content="Remarks:"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="5"
                        FontFamily="Times New Roman Bold"
                        Foreground="Black"/>

                    <TextBox
                        x:Name="txtBox_Remarks"
                        Height="50"
                        Width="100"
                        FontFamily="Times New Roman"
                        FontSize="5"
                        BorderThickness="0.3">
                    </TextBox>

                </StackPanel>
            </Border>
        </Viewbox>

        <Viewbox
            Grid.Row="11"
            Grid.Column="1"
            Grid.RowSpan="1"
            Grid.ColumnSpan="10"
            Margin="0, 2.5, 0, 0">

            <Border 
                BorderBrush="Black"
                BorderThickness="0"
                Margin="0, 10, 0, 0">
                <StackPanel
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">


                    <Button
                        x:Name="btn_ModifyJobOpening"
                        BorderBrush="Black"
                        BorderThickness="0.3"
                        Height="20"
                        Width="60"
                        Content="Modify"
                        FontSize="8"
                        FontFamily="Times New Roman Bold"
                        Margin="0, 0, 10, 0"
                        Background="Orange"
                        Foreground="White"
                        Click="btn_ModifyJobOpening_Click"/>

                    <Button
                        x:Name="btn_DeleteJobOpening"
                        BorderBrush="Black"
                        BorderThickness="0.3"
                        Height="20"
                        Width="60"
                        Content="Delete"
                        FontSize="8"
                        FontFamily="Times New Roman Bold"
                        Background="Red"
                        Foreground="White"
                        Click="btn_DeleteJobOpening_Click"/>
                   
                </StackPanel>
            </Border>
        </Viewbox>

    </Grid>
</Window>

